{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "lib": ["ES2020"],
        "noImplicitAny": true,
        "strict": true,
        "alwaysStrict": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "declaration": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true
    } 
}